@model ManageMyProjects.Models.Milestone

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Milestone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Milestone Name</label>
                <input asp-for="MilestoneName" class="form-control" />
                <span asp-validation-for="MilestoneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Milestone Date</label>
                <input asp-for="MilestoneDate" class="form-control" />
                <span asp-validation-for="MilestoneDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Projekt Phase</label>
                <select asp-for="PhaseId" class="form-control" asp-items="ViewBag.PhaseId"></select>
                <span asp-validation-for="PhaseId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<ManageMyProjects.Models.PersonnelResource>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Expense Planned
            </th>
            <th>
                Expense Real
            </th>
            <th>
                Deviation
            </th>
            <th>
                Function
            </th>
            <th>
                Activity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ResourceTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResourcePlanned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResourceReal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RessourceDeviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Function.FunctionTyp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivity.PhaseActivityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

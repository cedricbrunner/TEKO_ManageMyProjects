@model IEnumerable<ManageMyProjects.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectApprovalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectStartDatePlanned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectEndDatePlanned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectStartDateRealized)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectEndDateRealized)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcedureModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectApprovalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectStartDatePlanned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectEndDatePlanned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectStartDateRealized)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectEndDateRealized)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcedureModel.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<ManageMyProjects.Models.Phase>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhaseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseReview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseStartDatePlanned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseEndDatePlanned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseStartDateRealized)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseEndDateRealized)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseReview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseStartDatePlanned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseEndDatePlanned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseStartDateRealized)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseEndDateRealized)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<ManageMyProjects.Models.PhasesActivity>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhaseActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseActivityProgress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseActivityBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseActivityExpense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseActivityStartDatePlanned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseActivityEndDatePlanned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseActivityStartDateRealized)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseActivityEndDateRealized)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phase)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivityProgress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivityBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivityExpense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivityStartDatePlanned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivityEndDatePlanned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivityStartDateRealized)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhaseActivityEndDateRealized)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeFirstName)
                @Html.DisplayFor(modelItem => item.Employee.EmployeeLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase.PhaseName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Project.ProjectTitle)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
